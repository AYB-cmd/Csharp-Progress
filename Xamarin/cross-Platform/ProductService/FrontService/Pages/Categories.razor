@page "/categories"
@using FrontService.Services
@inherits CategoriesListBase



<NavLink class="nav-link" href="AddEmployee">
    <span class="oi oi-plus" aria-hidden="true">Add New</span>

</NavLink>

<h1>Employee Info</h1>
@if (Categories is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Emp Id</th>
                <th>Employee Name</th>
               
                <th>Source</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Category in Categories)
            {
                <tr>
                    <td>@Category.Id</td>
                    <td>@Category.Name</td>
                 
                   
                    <td>@Category.FullImageUrl</td>
                    <td>
                        <a class="nav-link" href="EditEmployee/@Category.Id">
                            <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                        </a>
                        <a class="nav-link" href="Delete/@Category.Id">
                            <span class="oi oi-trash" aria-hidden="true">Delete</span>
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}


