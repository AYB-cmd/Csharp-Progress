<Window x:Class="Greating.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Greating"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Label Content="Select a message Option" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Arial Black"/>
        <RadioButton x:Name="radioHello" Content="Hello" HorizontalAlignment="Left" Margin="120,169,0,0" VerticalAlignment="Top"  FontSize="16" FontFamily="Adobe Caslon Pro Bold" RenderTransformOrigin="-1.761,0.568"/>
        <RadioButton x:Name="radioGoodbye" Content="GoodBye" HorizontalAlignment="Left" Margin="389,169,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.504,0.572" FontFamily="Adobe Caslon Pro Bold" FontSize="16"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,263,0,0" VerticalAlignment="Top" Width="115" Height="31" FontSize="16" FontWeight="Bold" Click="Button_Click"/>
        <TextBox x:Name="txtName"  HorizontalAlignment="Left" Margin="238,213,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" MouseDoubleClick="tBtn"/>

    </Grid>
</Window>
